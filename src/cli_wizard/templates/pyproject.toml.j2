[build-system]
requires = ["setuptools>=61.0", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ cli_name }}"
version = "0.1.0"
description = "CLI generated by cli-wizard from OpenAPI specification"
readme = "README.md"
license = {text = "MIT"}
requires-python = ">=3.11"
dependencies = [
    "click~=8.1",
    "requests~=2.32",
]

[project.scripts]
{{ cli_name }} = "{{ package_name }}.cli:main"

[tool.setuptools.packages.find]
where = ["src"]
include = ["{{ package_name }}*"]
