[tox]
envlist = py312,py313,py314
isolated_build = True

[testenv]
deps =
    pytest
    pytest-cov
commands =
    pytest tests/ -v --cov={{ PackageName }} --cov-report=term

[testenv:lint]
deps =
    flake8
    mypy
    types-PyYAML
    types-requests
commands =
    flake8 src/ tests/
    mypy src/

[testenv:format]
deps =
    black
    autoflake
commands =
    black --check src/ tests/
