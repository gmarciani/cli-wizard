{
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "bearerFormat": "JWT",
        "description": "JWT Bearer token authentication",
        "scheme": "bearer",
        "type": "http",
        "x-bearerInfoFunc": "server.validate_token"
      }
    }
  },
  "info": {
    "description": "A simple API for demonstration purposes",
    "title": "Simple API",
    "version": "1.0.0"
  },
  "openapi": "3.0.3",
  "paths": {
    "/private/greetings": {
      "get": {
        "description": "Returns a greeting message for the authenticated user",
        "operationId": "server.get_greetings",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "message": {
                      "example": "Hello, demo-user!",
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Successful response"
          },
          "401": {
            "description": "Unauthorized - Invalid or missing bearer token"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Get a greeting message (authenticated)",
        "tags": [
          "Private"
        ]
      }
    },
    "/public/greetings": {
      "get": {
        "description": "Returns a greeting message without authentication",
        "operationId": "server.get_public_greetings",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "message": {
                      "example": "Hello, World!",
                      "type": "string"
                    }
                  },
                  "type": "object"
                }
              }
            },
            "description": "Successful response"
          }
        },
        "security": [],
        "summary": "Get a public greeting message",
        "tags": [
          "Public"
        ]
      }
    }
  },
  "servers": [
    {
      "description": "Local development server",
      "url": "http://localhost:3000"
    }
  ]
}
